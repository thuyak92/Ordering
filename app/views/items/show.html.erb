<div id="main-columnR">
  <h1 class="page-header">Item Detail</h1>
  <div class="panel panel-default">
    <!-- Table -->
    <table class="table">
      <tr>
        <th><%= Item.human_attribute_name(:id) %></th>
        <td> <%= @item.id %> </td>
      </tr>
      <tr>
        <th><%= Item.human_attribute_name(:name) %></th>
        <td> <%= @item.name %> </td>
      </tr>
      <% if @item.has_image? %>
        <tr>
          <th><%= Item.human_attribute_name(:image_url) %></th>
          <td><%= @item.image_url %></td>
        </tr>
        <tr>
          <th>Image</th>
          <td><%= image_tag(@item.image_url) %></td>
        </tr>
      <% end %>
      <tr>
        <th><%= Item.human_attribute_name(:description) %></th>
        <td> <%= @item.description %> </td>
      </tr>
      <tr>
        <th><%= Item.human_attribute_name(:category_id) %></th>
        <td> <%= @item.category.name %> </td>
      </tr>
      <tr>
        <th><%= Item.human_attribute_name(:price) %></th>
        <td> <%= @item.price %> <%#= CURRENCY %> </td>
      </tr>
      <tr>
        <th><%= Item.human_attribute_name(:in_stock_now) %></th>
        <td> <%= @item.in_stock_now %> </td>
      </tr>
    </table>
  
  </div>
  <%= button_to "Back", items_path, :class => "btn btn-primary btn-left col-xs-12 col-sm-1 col-sm-offset-0", :method => :get %>
  <%= button_to "Edit", edit_item_path(@item), :class => "btn btn-success col-xs-12 col-sm-1 col-sm-offset-1", :method => :get %>
</div>