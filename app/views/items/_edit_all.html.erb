<div class="row edit-all" style="display: none;">
    <div class="col-xs-8">
      <div class="form-group">
        <label class="col-sm-3 control-label">Category</label>
        <div class="col-sm-5">
          <select type="text" class="form-control input-sm" id="category" style="width: 100px !important;">
            <% Category.categories.each do |option| %>
              <option value="<%= option[:id] %>"><%= option[:name] %></option>
            <% end %>
          </select>
        </div>
        <button type="button" class="btn btn-primary" id="autoCategory">Apply to all</button>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Price</label>
        <div class="col-sm-5">
          <input type="number" class="price form-control input-sm" style="width: 100px height: 30px !important;"></input>
        </div>
        <button type="button" class="btn btn-primary" id="autoPrice">Apply to all</button>
      </div>
    </div>
  </div>